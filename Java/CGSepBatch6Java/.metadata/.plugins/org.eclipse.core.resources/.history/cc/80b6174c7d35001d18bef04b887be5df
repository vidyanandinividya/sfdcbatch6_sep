package session1;

import java.util.Scanner;

public class conditional {

	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int num;
		System.out.println("Enter the value of num");
		num=sc.nextInt();
		if(num%2==0)
		{
			System.out.println("The given" + num + "is even");
		}

	}

}
